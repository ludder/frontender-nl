{
  "name": "frontender-nl",
  "version": "0.0.1",
  "description": "Website frontender.nl",
  "main": "dist/index.html",
  "scripts": {
    "formerbuild": "run-s build:*",
    "make": "npm run make:clean && npm run make:copy && npm run make:fonts",
    "make:clean": "rm -rf dist && mkdir dist",
    "make:copy": "cp src/index.html dist",
    "make:fonts": "subfont -i dist/index.html",
    "start": "reload --port 5555 --browser --dir src --watch-dir src",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ludder/frontender-nl.git"
  },
  "keywords": [
    "html",
    "frontend"
  ],
  "author": "Tom Greuter",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ludder/frontender-nl/issues"
  },
  "homepage": "https://github.com/ludder/frontender-nl#readme",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "reload": "^3.0.2",
    "subfont": "^3.7.1"
  }
}
